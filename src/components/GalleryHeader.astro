---
export interface Props {
  gallery: {
    id: string;
    title: string;
    description?: string;
    slug: string;
    coverImage: {
      id: string;
      url: string;
      alt: string;
      width: number;
      height: number;
    };
    images: Array<any>;
    createdAt: string;
    updatedAt: string;
  };
}

const { gallery } = Astro.props;

// Format date for display
const formatDate = (dateString: string) => {
  return new Date(dateString).toLocaleDateString('en-US', {
    year: 'numeric',
    month: 'long',
    day: 'numeric'
  });
};
---

<header class="relative bg-gradient-to-br from-gray-50 to-gray-100 py-16">
  <div class="container mx-auto px-4">
    <div class="max-w-4xl mx-auto text-center">
      <h1 class="text-4xl md:text-5xl font-bold text-gray-900 mb-6">
        {gallery.title}
      </h1>
      
      {gallery.description && (
        <p class="text-xl text-gray-600 mb-8 max-w-2xl mx-auto">
          {gallery.description}
        </p>
      )}
      
      <div class="flex flex-col sm:flex-row items-center justify-center gap-6 text-sm text-gray-500">
        <div class="flex items-center">
          <svg class="mr-2 w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 16l4.586-4.586a2 2 0 012.828 0L16 16m-2-2l1.586-1.586a2 2 0 012.828 0L20 14m-6-6h.01M6 20h12a2 2 0 002-2V6a2 2 0 00-2-2H6a2 2 0 00-2 2v12a2 2 0 002 2z"></path>
          </svg>
          {gallery.images.length} Photos
        </div>
        
        <div class="flex items-center">
          <svg class="mr-2 w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z"></path>
          </svg>
          Created {formatDate(gallery.createdAt)}
        </div>
        
        {gallery.updatedAt !== gallery.createdAt && (
          <div class="flex items-center">
            <svg class="mr-2 w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 4v5h.582m15.356 2A8.001 8.001 0 004.582 9m0 0H9m11 11v-5h-.581m0 0a8.003 8.003 0 01-15.357-2m15.357 2H15"></path>
            </svg>
            Updated {formatDate(gallery.updatedAt)}
          </div>
        )}
      </div>
    </div>
  </div>
</header>
